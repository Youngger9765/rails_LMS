<div class="modal fade" id="new_exercise_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          New Exercise
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body responsive-exercise">
        <%= form_with url: new_content_admin_school_course_section_path(@admin_school, @admin_course, @admin_section) do |f| %>
          <div class="card-admin">
            <div class="card-body">
              <div class="mb-3">
                <%= f.label :name, { class: "form-label" }%>
                  <%= f.text_field :name, { class: "form-control" } %>
              </div>
              <div class="mb-3">
                <%= f.label :cover_range, { class: "form-label" }%>
                  <%= f.text_field :cover_range, { class: "form-control" } %>
              </div>
              <div class="field">
                <%= f.label :is_random, { class: "form-label" }%>
                  <%= f.check_box :is_random, {}, true, false%>
              </div>
              <%= hidden_field_tag "content_kind" , "Exercise" %>
                <%= f.submit 'Submit' , :class=> "btn btn-primary"%>
            </div>
          </div>
        <% end %>
      </div>      
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
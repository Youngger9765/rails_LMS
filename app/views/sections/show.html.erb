<h1>Section</h1>
<p>
    <%= @section.name %>
</p>
<p>
    <%= @section.description %>
</p>
<p>
    <%= @section.position_id %>
</p>


<!-- Contents -->
<h1>Contents</h1>
<div class="container mt-2">
    <div class="row">
        <% @content_list.each_with_index do |content, index| %>
            <% data_bs_target="Modal-#{index}" %>
            <div class="col-md-12 col-sm-12 item mt-2 p-2" data-bs-toggle="modal" data-bs-target="#<%=data_bs_target%>"">
                <div class="card item-card card-block">
                    <h3>
                        <%= content[:kind]%>
                    </h3>
                    <h5 class="item-card-title mt-3 mb-3 p-2">
                        <%=content[:name]%>
                    </h5>
                    <p class="card-text p-2">
                        <%=content[:url]%>
                    </p>
                    
                </div>
                <%= render :partial=> 'video_modal', :locals => {:data_bs_target => data_bs_target}%>
            </div>
            
        <%end%>
    </div>
</div>
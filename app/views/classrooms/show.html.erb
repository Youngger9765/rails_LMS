<h1>School/Classroom</h1>

<p>name: <%= @classroom.name %> </p>
<p>description: <%= @classroom.description %> </p>
<p>city: <%= @classroom.city %> </p>
<p>school_name: <%= @classroom.school_name %> </p>
<p>school_type: <%= @classroom.school_type %> </p>
<p>grade: <%= @classroom.grade %> </p>

<hr>
<!-- Teachers -->
<h3>Teachers</h3>
<div class="container mt-2">
    <div class="row">
        <% @teachers.each do |teacher|%>
            <div class="col-md-3 col-sm-6 item mt-2 p-2 linkable">
                <div class="card item-card card-block">
                    <img src="https://static.pexels.com/photos/7096/people-woman-coffee-meeting.jpg" alt="Photo of sunset">
                    <%= link_to school_classroom_teacher_path(@school,@classroom,teacher) do%>
                        <h5 class="item-card-title mt-3 mb-3 p-2">
                            <%=teacher.name%>
                        </h5>
                    <%end%>
                    <p class="card-text p-2">
                        <%=teacher.user.email%>
                    </p>
                </div>
            </div>
        <%end%>
    </div>
</div>


<h1>School/Course</h1>

<p>name: <%= @course.name %>
</p>
<p>description: <%= @course.description %>
</p>
<p>goal: <%= @course.goal %>
</p>
<p>note: <%= @course.note %>
</p>
<p>tool: <%= @course.tool %>
</p>

<hr>
<!-- Teachers -->
<h3>Teachers</h3>
<div class="container mt-2">
    <div class="row">
        <% @teachers.each do |teacher|%>
            <div class="col-md-3 col-sm-6 item mt-2 p-2 linkable">
                <div class="card item-card card-block">
                    <img src="https://static.pexels.com/photos/7096/people-woman-coffee-meeting.jpg"
                        alt="Photo of sunset">
                    <%= link_to school_course_teacher_path(@school,@course,teacher) do%>
                        <h5 class="item-card-title mt-3 mb-3 p-2">
                            <%=teacher.name%>
                        </h5>
                        <%end%>
                            <p class="card-text p-2">
                                <%=teacher.user.email%>
                            </p>
                </div>
            </div>
            <%end%>
    </div>
</div>

<!-- Sections -->
<h3>Sections</h3>
<div class="container mt-2">
    <div class="row">
        <% @sections.each do |section|%>
            <div class="col-md-12 col-sm-12 item mt-12 p-12 linkable">
                <div class="card item-card card-block">
                    <%= link_to school_course_section_path(@school,@course,section) do%>
                        <h5 class="item-card-title mt-3 mb-3 p-2">
                            <%=section.name%>
                        </h5>
                    <%end%>
                    <p class="">
                        <%=section.description%>
                    </p>
                    <p class="">
                        position_id: <%=section.position_id%>
                    </p>
                </div>
            </div>
        <%end%>
    </div>
</div>